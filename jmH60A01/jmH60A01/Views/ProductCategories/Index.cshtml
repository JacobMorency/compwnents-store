@* TODO: Convert to ASP *@
@model IEnumerable<jmH60A01.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdCat)
            </th>
            <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="GetProductByCategory" asp-route-categoryId="@item.CategoryId">@Html.DisplayFor(modelItem => item.ProdCat)</a>
            </td>
            <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
